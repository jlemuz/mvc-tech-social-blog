<section>
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-url">Blog</label>
      <input id="post-url" name="post-url"/>
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
  <li>
  <div class="card" style="width: 75%;">
  <div class="card-header card text-white bg-dark mb-3">
         {{ post.title}}
       <div>Posted  by {{user.username}} on {{format_date created_at}}</div>

  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">{{ post.post_url}}</li>
  </ul>
</div>

    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>